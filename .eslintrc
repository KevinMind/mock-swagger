{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "browser" : true,
    "jest": true
  },
  "rules": {
    "max-len": [2, 120],
    "import/prefer-default-export": 0,
    "react/jsx-filename-extension": 0
  },
  "overrides": [
    {
      "files": [ "**/*.stories.js" ],
      "rules": {
        "import/no-extraneous-dependencies": 0,
        "no-console": 0
      }
    }
  ]
}
